{% include "front/menu/css.njk" %}
<body
    class="bg-white">
    <!-- Page Content -->
    {% include "front/menu/nav.njk" %}
    <!-- Modal -->
    <main>
        <section class="py-8">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-12 col-12">
                        <div class="text-center">
                            <h1 class="display-3 fw-bold">{{tr.terms_title}}</h1>
                            <p class="lead px-8">{{tr.terms_subtitle}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="pb-8">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-12 col-12">
                        <div class="py-3 mb-5 border-bottom">
                            <h3>{{tr.effective_date}} <span class="text-primary">01.01.2024</span></h3>
                        </div>

                        <div class="d-flex mt-5">
                            <div class="ms-3">
                                <h3 class="fw-bold">{{tr.general_rules_title}}</h3>
                                <p class="fs-4">{{tr.general_rules_text}}</p>
                            </div>
                        </div>

                        <div class="d-flex mt-3">
                            <div class="ms-3">
                                <h3 class="fw-bold">{{tr.privacy_title}}</h3>
                                <p class="fs-4">{{tr.privacy_text}}</p>
                            </div>
                        </div>

                        <div class="d-flex mt-3">
                            <div class="ms-3">
                                <h3 class="fw-bold">{{tr.payment_title}}</h3>
                                <p class="fs-4">{{tr.payment_text}}</p>
                            </div>
                        </div>

                        <div class="d-flex mt-3">
                            <div class="ms-3">
                                <h3 class="fw-bold">{{tr.content_title}}</h3>
                                <p class="fs-4">{{tr.content_text}}</p>
                            </div>
                        </div>

                        <div class="mt-5">
                            <h2 class="fw-bold">{{tr.platform_rules_title}}</h2>
                            <ul class="fs-4">
                                {% for rule in tr.rules_list %}
                                    <li>{{rule}}</li>
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="mt-5">
                            <h2 class="fw-bold">{{tr.data_processing_title}}</h2>
                            <p class="fs-4">{{tr.data_processing_text}}</p>
                        </div>

                        <div class="mt-5">
                            <h2 class="fw-bold">{{tr.rules_change_title}}</h2>
                            <p class="fs-4">{{tr.rules_change_text}}</p>
                            <p class="fs-4">
                                {{tr.contact_text}} <a href="mailto:info@quizs.uz">info@quizs.uz</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- footer -->
    {% include "front/menu/footer.njk" %}
    {% include "front/menu/js.njk" %}
</body>